                            url= url.slice(0,index) +'/Name='+ document.getElementById('Name').value+ url.slice(index);
                        }else{
                            url = url+ '/Name=' + document.getElementById('Name').value;
                        }
                    }
                }
            }
        }
          
        }

        function CreateURL_Price(){

